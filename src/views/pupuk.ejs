<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pupuk</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
        <a class="navbar-brand" href="<%= url %>">Management Data Pupuk</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="http://localhost:8000/">Home</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="http://localhost:8000/pupuk">Pupuk</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="http://localhost:8000/bibit">Bibit</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5 pt-5">
        <h1>Pupuk</h1>
        <a href="<%= url + 'pupuk/add' %>" class="btn btn-primary mb-3">Tambah Data</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Merek</th>
                    <th>Harga</th>
                    <th>Berat</th>
                </tr>
            </thead>
            <tbody>
                <% if (pupuk.length> 0) { %>
                    <% pupuk.forEach(function(pupuk) { %>
                        <tr>
                            <td>
                                <%= pupuk.merek %>
                            </td>
                            <td>
                                <%= pupuk.harga %>
                            </td>
                            <td>
                                <%= pupuk.berat %>
                            </td>
                            <td>
                                <a href="<%= url + 'pupuk/edit/' + pupuk.id %>"
                                    class="btn btn-warning btn-sm">Edit</a>
                                <a href="<%= url + 'pupuk/delete/' + pupuk.id %>" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                            </td>
                        </tr>
                        <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="text-center">No Data</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>

</html>